# LeanVibe AI Enterprise Platform - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# CRITICAL SECURITY SETTINGS - REQUIRED FOR PRODUCTION
# =============================================================================

# JWT Secret Key - Generate with: openssl rand -hex 32
LEANVIBE_SECRET_KEY=your_secret_key_here_change_this_immediately

# Neo4j Database Password
NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================

# Environment: development, staging, production
LEANVIBE_ENV=development

# Server Configuration
LEANVIBE_HOST=0.0.0.0
LEANVIBE_PORT=8001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL for Production (recommended)
# LEANVIBE_DATABASE_URL=postgresql://user:password@localhost:5432/leanvibe

# SQLite for Development (default)
LEANVIBE_DATABASE_URL=sqlite+aiosqlite:///./leanvibe.db

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis for Caching and Rate Limiting
LEANVIBE_REDIS_URL=redis://localhost:6379/0

# Neo4j Graph Database
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_DATABASE=neo4j

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# MLX Strategy: PRODUCTION, MOCK, or FALLBACK
LEANVIBE_MLX_STRATEGY=PRODUCTION

# Model Configuration
MODEL_NAME=mistral:7b-instruct
MODEL_VERSION=latest

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Enable Debug Mode (development only)
LEANVIBE_DEBUG=true

# Log Level: DEBUG, INFO, WARNING, ERROR
LEANVIBE_LOG_LEVEL=INFO

# Enable Performance Monitoring
LEANVIBE_ENABLE_METRICS=true

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Management
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_FILES_PER_REQUEST=10

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable hot reload in development
LEANVIBE_RELOAD=true

# Enable CORS for development
LEANVIBE_CORS_ENABLED=true
LEANVIBE_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Key for CLI/SDK access (generate unique per deployment)
LEANVIBE_API_KEY=your_api_key_here

# Encryption settings
ENCRYPTION_KEY_ID=default
DATA_RETENTION_DAYS=90

# =============================================================================
# TENANT CONFIGURATION
# =============================================================================

# Default tenant settings
DEFAULT_TENANT_PLAN=DEVELOPER
DEFAULT_TRIAL_DAYS=30
ENABLE_MULTI_TENANCY=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE_CRON="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE
# =============================================================================

# Audit logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance

# Data residency
DEFAULT_DATA_RESIDENCY=US

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Database connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_RECYCLE_SECONDS=300

# WebSocket settings
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL_SECONDS=20

# Cache settings
CACHE_DEFAULT_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=512