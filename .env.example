# LeanVibe Environment Configuration
# Copy this file to .env and update values for your environment

# Environment (development, staging, production)
LEANVIBE_ENV=development

# Server Configuration
LEANVIBE_HOST=0.0.0.0
LEANVIBE_PORT=8001

# Security (MUST change for production)
LEANVIBE_SECRET_KEY=your-super-secret-key-here

# Database URLs
LEANVIBE_DATABASE_URL=postgresql://user:password@localhost:5432/leanvibe
LEANVIBE_REDIS_URL=redis://localhost:6379/0

# MLX AI Configuration
LEANVIBE_MLX_MODEL=microsoft/Phi-3.5-mini-instruct
LEANVIBE_MLX_STRATEGY=MOCK

# API Configuration
LEANVIBE_API_URL=http://localhost:8001

# iOS App Configuration (for Info.plist)
API_BASE_URL=http://localhost:8001
VOICE_FEATURES_ENABLED=true
CODE_COMPLETION_ENABLED=true
ANALYTICS_API_KEY=

# Feature Flags
LEANVIBE_ENABLE_LOGGING=true
LEANVIBE_ENABLE_MONITORING=false
LEANVIBE_DISABLE_ANALYTICS=true

# Production-specific settings
# Only set these in production:
# LEANVIBE_ENV=production
# LEANVIBE_SECRET_KEY=your-production-secret-key
# LEANVIBE_MLX_STRATEGY=PRODUCTION
# LEANVIBE_DATABASE_URL=your-production-database-url
# LEANVIBE_DISABLE_ANALYTICS=false