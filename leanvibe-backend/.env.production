# LeanVibe Production Configuration
# Copy to .env and update values for your environment

# Server
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
LOG_LEVEL=WARNING

# Security (REQUIRED - Change these!)
LEANVIBE_API_KEY=change-this-to-random-64-char-string
SECRET_KEY=change-this-to-another-random-64-char-string

# CORS (restrict to your domains)
ALLOWED_ORIGINS=["https://yourdomain.com"]

# Performance
WORKERS=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
CIRCUIT_BREAKER_THRESHOLD=5

# External Services (optional)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=secure-password
# REDIS_URL=redis://localhost:6379
# CHROMA_HOST=localhost
# CHROMA_PORT=8001

# AI Model (optional - will use mock if not available)
# OLLAMA_HOST=localhost
# OLLAMA_PORT=11434
# MLX_MODEL_PATH=/path/to/model

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# METRICS_ENABLED=true